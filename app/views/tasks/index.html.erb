<div class="header">
  <h3>My Tasks</h3>
<div>

<ul>
  <% @tasks.each do |task|%>
    <li>
      <% if task.completed %>
      <i class="far fa-check-square"></i>
      <% else %>
      <i class="far fa-square"></i>
      <% end %>
      <%= link_to task.title, task_path(task) %><br>
    </li>
  <% end %>
</ul>

<i class="fas fa-plus-circle"></i> <%= link_to "Add task", new_task_path %>