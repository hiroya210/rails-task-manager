
<h1><%= @task.title %></h1>
<div class="task-details">
  <p><%= @task.details %></p>
</div>


<% if @task.completed %>
    <p><i class="far fa-check-square"></i> This task is completed</p>
<% else %>
    <p><i class="far fa-square"></i> This task is not yet completed</p>
<% end %>

<%= link_to "Back to list", tasks_path %><br> 
<%= link_to "Edit task", edit_task_path(@task) %> <br> 
<%= link_to "Delete task", task_path(@task), 
method: :delete, 
data: { confirm: "Are your sure?"} %>